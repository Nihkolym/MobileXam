<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DreamMobile.Views.SettingsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Language"/>
            <Picker x:Name="languagePicker" SelectedIndexChanged="LanguagePicker_SelectedIndexChanged" FontSize="Medium">
                <Picker.Items>
                    <x:String>Русский</x:String>
                    <x:String>English</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>